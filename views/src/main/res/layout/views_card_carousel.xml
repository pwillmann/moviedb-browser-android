<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/res_margin_double"
    android:layout_marginEnd="@dimen/res_margin_double"
    android:background="@drawable/views_background_card"
    android:elevation="@dimen/views_card_elevation">

   <com.airbnb.epoxy.Carousel
       android:id="@+id/carousel"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/res_margin_single"
       android:layout_marginBottom="@dimen/res_margin_single"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout >